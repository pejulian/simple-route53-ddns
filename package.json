{
    "name": "@pejulian/simple-route53-ddns",
    "type": "module",
    "version": "0.0.22",
    "description": "npm module containing a cron friendly script to get your machine's ip address and update it as a record set in the specified hosted zone in AWS Route53",
    "files": [
        "dist"
    ],
    "engines": {
        "node": ">=24",
        "npm": ">=10"
    },
    "exports": {
        ".": {
            "import": "./dist/index.js"
        },
        "./*": {
            "import": "./dist/*.js"
        }
    },
    "bin": {
        "simple-route53-ddns": "./dist/index.js"
    },
    "scripts": {
        "build": "rimraf dist/* && npm run lint && node --import=./loader.js ./build.ts",
        "prepublishOnly": "npm run build",
        "lint": "eslint --fix",
        "test": "vitest run",
        "prettier:format": "prettier --write ./src/**/*.ts",
        "prettier:check": "prettier --list-different ./src/**/*.ts",
        "prepare": "husky install",
        "publish:beta": "npm run update-beta-version && npm publish --tag beta --access=public",
        "publish:latest": "npm run update-version && npm publish --tag latest --access=public",
        "update-beta-version": "node --import=./loader.js ./scripts/npm-update-beta-version.ts",
        "update-version": "node --import=./loader.js ./scripts/npm-update-version.ts"
    },
    "keywords": [
        "commander",
        "chalk",
        "aws",
        "route53",
        "dynamic",
        "dns"
    ],
    "author": {
        "email": "bleushade@gmail.com",
        "name": "Julian Pereira",
        "url": "https://www.julian-pereira.com"
    },
    "license": "ISC",
    "dependencies": {
        "@aws-sdk/client-route-53": "^3.952.0",
        "@aws-sdk/credential-providers": "^3.952.0",
        "chalk": "^5.6.2",
        "commander": "^14.0.2",
        "shelljs": "^0.10.0",
        "uuidv4": "^6.2.13",
        "validator": "^13.15.23"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.3.3",
        "@eslint/js": "^9.39.2",
        "@types/chalk": "^2.2.4",
        "@types/child-process-promise": "^2.2.6",
        "@types/commander": "^2.12.5",
        "@types/node": "^25.0.2",
        "@types/rimraf": "^4.0.5",
        "@types/semver": "^7.7.1",
        "@types/shelljs": "^0.10.0",
        "@types/validator": "^13.15.10",
        "@typescript-eslint/eslint-plugin": "^8.50.0",
        "@typescript-eslint/parser": "^8.50.0",
        "child-process-promise": "^2.2.1",
        "esbuild": "^0.27.1",
        "esbuild-node-externals": "^1.20.1",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "globals": "^16.5.0",
        "husky": "^9.1.7",
        "prettier": "^3.7.4",
        "rimraf": "^6.1.2",
        "semver": "^7.7.3",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.3",
        "vitest": "^4.0.16"
    }
}
