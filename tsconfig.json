{
    "compilerOptions": {
        "target": "ES2015",
        "module": "commonjs",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "dist",
        "removeComments": true,
        "strict": true,
        "baseUrl": "./",
        "typeRoots": [
            "./node_modules/@types"
        ],
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "newLine": "lf"
    },
    "exclude": ["node_modules", "dist/**/*", "cdk.out/**/*", "scripts/**/*"],
    "include": ["src/**/*.ts", "types/**/*.ts", "types/*.d.ts"]
}